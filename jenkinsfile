pipeline {
	agent any
	tools {
		maven 'my-maven'
		jdk 'java-jdk'
	}
	stages {
		stage('Clone')
		{
			steps
			{
			    git url:'https://github.com/shreya2616/service-regitry.git', branch:'master'
			}
		}
		stage('Build')
		{
			steps
			{
			    bat "mvn clean install -DskipTests"
			}
		}
		stage('Test')
		{
			steps
			{
			    bat "mvn test"
			}
		}
		stage('Deploy')
		{
			steps
			{
			    bat "docker rm -f registry-container"
			    bat "docker rmi -f registry-image"
			    bat "docker build -t registry-image ."
			    bat "docker run -p 8090:8090 -d --name registry-container registry-image"
			}
		}
	}
}